    static int cursorCol;
    static int NUM_COLS;
    static int NUM_ROWS;
    static int NUM_BITS;

    /** Initializes the screen and locate cursor on the top left. */
    function void init() 
    {
        var int i;
        var int currentVal;
        
        do Output.initMap();
        let NUM_COLS = 64;
        let NUM_ROWS = 23;
        let cursorRow = 0;
        let cursorCol = 0;


        let NUM_BITS = 16;
        let currentVal = 1;
        let twoToThe = Array.new(NUM_BITS);
        let i = 0;
        while(i < NUM_BITS)
        {
            let twoToThe[i] = currentVal;
            let currentVal = currentVal + currentVal;
            let i = i + 1;
        }
        return;
    }

