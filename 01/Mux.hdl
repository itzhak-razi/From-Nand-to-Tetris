/**
 * Multiplexor. If sel == 1 then out = b else out = a.
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    // Put your code here.
    Not(in = sel, out = nots);
    And(a = a, b = nots, out = outa);
    And(a = b, b = sel, out = outb);
    Or(a = outa, b = outb, out = out);
}
